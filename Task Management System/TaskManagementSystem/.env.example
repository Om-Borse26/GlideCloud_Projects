# Optional root env.
# Use this mainly for docker-compose overrides.

# JWT (recommended even for local docker)
JWT_SECRET=change-me-change-me-change-me-change-me
JWT_EXPIRATION_MS=86400000

# CORS (only needed if you bypass nginx and hit backend directly)
CORS_ALLOWED_ORIGINS=http://localhost:5173

# Auto-archive DONE tasks after N days (0 disables)
TASKS_ARCHIVE_DONE_AFTER_DAYS=1

# Optional bootstrap admin (local/dev only)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-me

# Email (optional)
MAIL_ENABLED=false
MAIL_FROM=
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
CLIENT_BASE_URL=http://localhost:5173

# mongo-express basic auth
MONGO_EXPRESS_USER=user
MONGO_EXPRESS_PASS=pass

# Optional port overrides for compose
MONGO_PORT=mongo_port
MONGO_EXPRESS_PORT=mongo_express_port
