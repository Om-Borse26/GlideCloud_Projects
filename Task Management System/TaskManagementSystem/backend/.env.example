# Backend env (Spring Boot)
# Copy to backend/.env (or set real env vars in your deployment).

# Server
SERVER_PORT=8081

# Database
SPRING_DATA_MONGODB_URI=mongodb://localhost:27017/task_management_system

# JWT (REQUIRED)
# Must be long enough for HS256 (recommend 32+ chars)
JWT_SECRET=change-me-change-me-change-me-change-me
JWT_EXPIRATION_MS=86400000

# CORS (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:5173

# Client URL used in emails/links
CLIENT_BASE_URL=http://localhost:5173

# Email (optional)
MAIL_ENABLED=false
MAIL_FROM=
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# Auto-archive DONE tasks after N days (0 disables)
TASKS_ARCHIVE_DONE_AFTER_DAYS=1

# AI integration (optional)
AI_ENABLED=false
AI_PROVIDER=
AI_API_KEY=

# Optional local-dev bootstrap admin user (DO NOT use in production)
ADMIN_EMAIL=
ADMIN_PASSWORD=
